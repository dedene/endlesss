!!! 5
%html
  %head
    %title
      - if content_for? :title      
        = "Endlesss Inspiration // #{yield :title}"
      - else
        = "Endlesss Inspiration"
    
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/  
    
    = stylesheet_link_tag "screen"    
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Reenie+Beanie"
    = javascript_include_tag :defaults    
    = javascript_include_tag "depagify.js"    
    = javascript_include_tag "application.js"    
    = csrf_meta_tag
    = yield :head   
     
  
  %body
    %header
      %h1 Endlesss Inspiration
    #container
      = yield
          